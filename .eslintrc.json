{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-console": "warn",
    "linebreak-style": 0,
    "import/no-unresolved": "off",
    "import/prefer-default-export": "off"
  },
  "settings": {
    "import/extensions": [".jsx", ".js"],
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  } 
}
